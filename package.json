{
	"name": "klasha-pay",
	"version": "1.0.1",
	"description": "This is an reactJS library for implementing klasha payment gateway",
	"type": "module",
	"main": "dist/index.js",
	"directories": {
		"example": "example"
	},
	"scripts": {
		"build": "rm -rf dist && rollup -c && exit 1",
		"build:watch": "rm -rf dist && rollup -c --watch",
		"format": "prettier --write '**/**/*.{js,}'",
		"lint": "eslint --ext .js,.ts,.tsx,.jsx --ignore-path .eslintignore .",
		"lint:fix": "npm run lint -- --fix",
		"test": "jest --env=jsdom",
		"test:watch": "jest --watch --verbose --env=jsdom"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/klasha-apps/klasha-react.git"
	},
	"keywords": [
		"klasha",
		"payment",
		"payment-gateway",
		"klasha-pay"
	],
	"author": "klasha",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/klasha-apps/klasha-react/issues"
	},
	"homepage": "https://github.com/klasha-apps/klasha-react#readme",
	"dependencies": {
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.2",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@types/react": "^18.2.14",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"eslint": "^8.44.0",
		"eslint-plugin-react": "^7.32.2",
		"jest": "^29.6.1",
		"prettier": "^3.0.0",
		"rollup": "^3.26.2",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-typescript2": "^0.23.0",
		"typescript": "^5.1.6"
	}
}
